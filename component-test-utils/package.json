{
  "name": "@narottamdev/component-test-utils",
  "version": "1.0.0",
  "description": "Universal testing utilities for component libraries across different frameworks",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.js",
    "lint:fix": "eslint src --ext .ts,.js --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "clean": "rimraf dist"
  },
  "keywords": [
    "testing",
    "components",
    "react",
    "vue",
    "angular",
    "universal",
    "utilities",
    "test-utils",
    "cross-framework",
    "typescript",
    "accessibility",
    "performance"
  ],
  "author": {
    "name": "Narottam Sharma",
    "email": "narottam.sharma.dev@gmail.com",
    "url": "https://github.com/NarottamSharma"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NarottamSharma/component-test-utils.git"
  },
  "bugs": {
    "url": "https://github.com/NarottamSharma/component-test-utils/issues"
  },
  "homepage": "https://github.com/NarottamSharma/component-test-utils#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-typescript": "^11.0.0",
    "@types/jest": "^29.5.0",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "jsdom": "^26.1.0",
    "rimraf": "^5.0.0",
    "rollup": "^3.25.0",
    "ts-jest": "^29.1.0",
    "tslib": "^2.8.1",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "@angular/core": ">=15.0.0",
    "@angular/testing": ">=15.0.0",
    "@testing-library/react": ">=12.0.0",
